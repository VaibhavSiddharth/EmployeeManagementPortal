@if (ViewBag.ErrorTitle == null)
{
<h3>An error occured while processing the request.The support team is notified and we are working on the fix</h3>

<h5>For more assistance, please contact support@zenith.com</h5>
<hr/>
}

else
{
    <h1 class="text-danger">@ViewBag.ErrorTitle</h1>
    <h5 class="text-danger">@ViewBag.ErrorMessage</h5>
}

