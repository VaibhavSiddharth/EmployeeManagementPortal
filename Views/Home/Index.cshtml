@model IEnumerable<Employee>

@{ 
    
    ViewBag.Title = "Index ";
}
    
    <div class="card-deck">
        @foreach (var employee in Model)
        {
            var image = "~/Images/" + (employee.PhotoPath ?? "noimage.jpg");
            <div class="card m-3" style=" min-width:20rem; max-width:20.5%">
                <div class="card-header">
                    <h3>@employee.Name</h3>
                </div>
                <img class="card-img-top" src="@image" asp-append-version="true"/>
                <div class="card-footer text-center">
                    @*<a href="@Url.Action("details","home",new { id = employee.Id })" class="btn btn-primary">View</a>*@
                    @*<a href="/home/details/@employee.Id" class="btn btn-primary">View</a>*@
                    <a asp-controller="home" asp-action="details" asp-route-id="@employee.Id" class="btn btn-primary m-1">View</a>
                    @*<a href="#" class="btn btn-primary m-1">Edit</a>*@
                    <a asp-action="Edit" asp-controller="Home" asp-route-Id="@employee.Id" class="btn btn-primary m-1">Edit</a>
                    <a href="#" class="btn btn-danger m-1">Delete</a>
                </div>
            </div>
        }
    </div>
    